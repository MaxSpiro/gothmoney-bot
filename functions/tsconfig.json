{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "compileOnSave": true,
  "types": [
    "node"
  ],
  "typeRoots": [
    "../node_modules/@types"
  ],
  "include": [
    "src",
    "./src/**/*",
    "./src/types/genius-types.ts",
  ]
}
